generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String
  address String?
  roles   String[]
  orders  Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  // total     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  results   Result[]
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
}

model Result {
  id            String   @id @default(uuid())
  name          String    @default("Untitled")
  time          Json
  x1            Json
  y1            Json
  x2            Json
  y2            Json
  x3            Json
  y3            Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt @default(now())
  theta1_init   Float
  theta1_series Json
  theta2_init   Float
  theta2_series Json
  theta3_init   Float
  theta3_series Json

  orders Order[]

  @@unique([theta1_init, theta2_init, theta3_init])
}
