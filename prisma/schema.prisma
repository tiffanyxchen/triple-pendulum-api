generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// schema.prisma

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  address   String?
  results   Result[] // all results requested by this user
}

model Result {
  id        String   @id @default(uuid())
  theta1_init    Float
  theta2_init    Float
  theta3_init    Float
  theta1_series Json
  theta2_series Json
  theta3_series Json
  time      Json
  x1        Json
  y1        Json
  x2        Json
  y2        Json
  x3        Json
  y3        Json
  createdAt DateTime @default(now())
  
  userId    Int?     // optional: who requested it
  user      User?    @relation(fields: [userId], references: [id])

  @@unique([theta1_init, theta2_init, theta3_init]) // ensures one result per unique angle set
}

